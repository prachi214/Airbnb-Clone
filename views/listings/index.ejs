
<% layout("/layouts/boilerplate") %>
<body>
    <style>
        /* styling for filters */
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }

        .filter p{
            font-size: 0.8rem;
        }

        .slick-prev:before{
            color: black; 
        }
       .slick-next:before {
            color: black;
        }

        .like-btn {
            color: rgb(59, 59, 57);
            font-size: 1.5rem;
            cursor: pointer;
            transition: color 0.3s ease;
            top: auto;
            width: 1rem;
            height: 1rem;
        }

        .liked {
            color: red;
        }

    </style>
    <div id="filter-slider">
        <div class="filter" onclick="filterListings('trending')">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </div>
        <div class="filter" onclick="filterListings('rooms')">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter" onclick="filterListings('iconic cities')">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter" onclick="filterListings('mountain')">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter" onclick="filterListings('castles')">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter" onclick="filterListings('amazing pools')">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter" onclick="filterListings('camping')">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter" onclick="filterListings('farms')">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter" onclick="filterListings('arctic')">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter" onclick="filterListings('domes')">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter" onclick="filterListings('boats')">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
     
        <% for (let listing of allListings) { %>

            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card"style="background-color:rgb(226 237 238)">
                    <img src="<%= listing.image.url  %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br/>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                        
                        </p>
                    </div>
                    <div class="like-btn" onclick="toggleLike(event, this)">
                        <i class="fa-solid fa-heart"></i>
                    </div>
                </div>
            </a> 

        <% } %>
    </div>

    <script>


        function filterListings(category) {
            window.location.href = `/listings/category/${category}`;
        }

        function toggleLike(event, element) {
            event.preventDefault(); // Prevents the default anchor tag behavior
            event.stopPropagation(); // Stops the event from bubbling up to the anchor tag
            element.classList.toggle('liked');
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
  
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
 
        
    

    <script>
        $(document).ready(function(){
            $('#filter-slider').slick({
                slidesToShow: 8,
                slidesToScroll: 2,
                autoplay: false,
                arrows: true,

                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 3,
                            slidesToScroll: 1,
                            infinite: true,
                            dots: true
                        }
                    },
                    {
                        breakpoint: 600,
                        settings: {
                            // slidesToShow: 2,
                            slidesToShow: 2,
                            slidesToScroll: 1
                        }
                    },
                    {
                        breakpoint: 480,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1
                        }
                    }
                ]
            });
        });
    </script>
</body>




